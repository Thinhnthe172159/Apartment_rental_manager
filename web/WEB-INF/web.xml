<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>NewFilter</filter-name>
        <filter-class>vn.fpt.edu.filter.NewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>javax.websocket.server.ServerContainer</servlet-name>
        <servlet-class>org.glassfish.tyrus.servlet.TyrusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>javax.websocket.server.ServerContainer</servlet-name>
        <url-pattern>/communityPostSocket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCommunityPost</servlet-name>
        <servlet-class>controller.DeleteCommunityPost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommunityPost</servlet-name>
        <url-pattern>/deletePost</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>addApartment</servlet-name>
        <servlet-class>vn.fpt.edu.controller.AddApartments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>vn.fpt.edu.controller.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addApartment</servlet-name>
        <url-pattern>/addApartment</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>HomePage</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorPage</location>
    </error-page>
</web-app>
